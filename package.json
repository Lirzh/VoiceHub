{
  "name": "voicehub",
  "version": "1.0.0",
  "description": "校园广播站点歌管理系统 - 基于数据库存储的现代化点歌、排期和播放管理平台",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "start": "node .output/server/index.mjs",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate deploy",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset",
    "setup": "npm install && npx prisma generate && npx prisma migrate deploy",
    "create-admin": "cd scripts && node create-admin.js",
    "clear-db": "cd scripts && node clear-database.js"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "formidable": "^3.5.4",
    "html2canvas": "^1.4.1",
    "html2pdf.js": "^0.10.3",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "nuxt": "^3.17.6",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "prisma": "^6.12.0"
  }
}
